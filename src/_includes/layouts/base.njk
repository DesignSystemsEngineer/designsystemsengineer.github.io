<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{% if title %}{{ title }} | {% endif %}{{ metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}" />
    
    <!-- Preconnect to external domains for performance -->
    <link rel="preconnect" href="https://www.googletagmanager.com" />
    <link rel="preconnect" href="https://backyard-studio.ck.page" />
    <link rel="dns-prefetch" href="https://www.googletagmanager.com" />
    <link rel="dns-prefetch" href="https://backyard-studio.ck.page" />
    
    <!-- Favicons: PNG fallback first, SVG last so browsers that support it prefer it -->
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="icon" type="image/svg+xml" href="/favicon-light.svg" />
    <script>
      (function() {
        var d = window.matchMedia('(prefers-color-scheme: dark)');
        function u(e) {
          var old = document.querySelector('link[rel="icon"][type="image/svg+xml"]');
          var n = document.createElement('link');
          n.rel = 'icon';
          n.type = 'image/svg+xml';
          n.href = (e.matches ? '/favicon-dark.svg' : '/favicon-light.svg') + '?v=' + Date.now();
          if (old) old.remove();
          document.head.appendChild(n);
        }
        u(d);
        d.addEventListener('change', u);
      })();
    </script>
    
    <!-- RSS Feed -->
    <link rel="alternate" type="application/rss+xml" title="{{ metadata.title }} RSS" href="{{ metadata.url }}/feed.xml" />
    
    <!-- Open Graph / Social Media -->
    <meta property="og:title" content="{% if title %}{{ title }} | {% endif %}{{ metadata.title }}" />
    <meta property="og:description" content="{{ description or metadata.description }}" />
    <meta property="og:url" content="{{ metadata.url }}{{ page.url }}" />
    <meta property="og:type" content="website" />
    
    <!-- Styles -->
    <link rel="stylesheet" href="/assets/css/main.css?v={{ buildTime.buildTime | cacheBust }}" />
    
    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-ZTPCVPPKH4"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){ dataLayer.push(arguments); }
      gtag('js', new Date());
      gtag('config', 'G-ZTPCVPPKH4');
    </script>
  </head>
  <body>
    <a href="#main-content" class="skip-link">Skip to content</a>
    <div class="wrapper">
      {% include "components/header.njk" %}
      <main id="main-content" class="main-content" role="main">
        {{ content | safe }}
      </main>
      {% include "components/footer.njk" %}
    </div>
  </body>
</html>
